<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2023-02-04-03-41-00_add-person-and-check-rate" author="Stanislav Vafin">
        <createTable tableName="person" schemaName="health">
            <column name="user_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="is_admin" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="is_super_admin" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addColumn tableName="chat_settings" schemaName="health">
            <column name="check_rate" type="numeric(21)" defaultValueNumeric="600000000000">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
